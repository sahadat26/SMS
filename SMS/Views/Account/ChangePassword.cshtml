@model SMS.Models.ChangePasswordModel
<div class="container-fluid">
    <div class="row">
        <div class="col-lg-12">
            <div class="panel panel-primary">
                <div class="panel-heading">
                    <i class="fa fa-fw fa-key"></i>
                    Change Password
                </div>
                <div class="panel-body">
                    @{

                    if (ViewBag.Info != null)
                    {
                    <!-- Message OK -->
                        <div class="alert alert-info">
                            <a href="#" class="close" data-dismiss="alert">&times;</a>
                            <strong>@ViewBag.Info</strong>
                        </div>
		            <!-- End Message OK -->
                    }
                    else if (ViewBag.Error != null)
                    {
		            <!-- Message Error -->
                        <div class="alert alert-danger">
                            <a href="#" class="close" data-dismiss="alert">&times;</a>
                            <p><strong>@ViewBag.Error</strong></p>
                        </div>
		            <!-- End Message Error -->
                    }
                    }


                    @using (Html.BeginForm("ChangePassword", "Account", FormMethod.Post, new { @class = "form-horizontal" }))
                {
                        @Html.ValidationSummary(true, "Password change was unsuccessful. Please correct the errors and try again.", new { @class = "text-danger" })
                        <div class="col-lg-4">
                            <div class="form-group">
                                @Html.LabelFor(m => m.OldPassword, new { @class = "control-label col-lg-6" })
                                <div class="col-lg-6">
                                    @Html.PasswordFor(t => t.OldPassword, new { @class = "form-control" })
                                    @Html.ValidationMessageFor(t => t.OldPassword, null, new { @class = "text-danger" })
                                </div>
                            </div>

                        </div>
                        <div class="col-lg-4">
                            <div class="form-group">
                                @Html.LabelFor(m => m.NewPassword, new { @class = "control-label col-lg-6" })
                                <div class="col-lg-6">
                                    @Html.PasswordFor(t => t.NewPassword, new { @class = "form-control" })
                                    @Html.ValidationMessageFor(t => t.NewPassword, null, new { @class = "text-danger" })
                                </div>
                            </div>

                        </div>
                        <div class="col-lg-4">
                            <div class="form-group">
                                @Html.LabelFor(m => m.ConfirmPassword, new { @class = "control-label col-lg-6" })
                                <div class="col-lg-6">
                                    @Html.PasswordFor(t => t.ConfirmPassword, new { @class = "form-control" })
                                    @Html.ValidationMessageFor(t => t.ConfirmPassword, null, new { @class = "text-danger" })
                                </div>
                            </div>

                        </div>
                        <div class="col-lg-12" style="text-align:center;">
                            <button type="submit" class="btn btn-primary">
                                <i class="fa fa-fw fa-save"></i> Change Password
                            </button>
                        </div>

                }
                </div>
            </div>
        </div>
    </div>
</div>
@section scripts
{
  @Scripts.Render("~/bundles/jqueryval")
}