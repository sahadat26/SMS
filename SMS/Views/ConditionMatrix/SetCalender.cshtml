@model IEnumerable<SMS.Models.setupCalender>

@{
    ViewBag.Title = "Setup Calender";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<h3><i class="fa fa-fw fa-calendar"></i> Setup Calender</h3>
<div class="container-fluid">
    <div class="row">

        @{

            if (ViewBag.Info != null)
            {
                    <!-- Message OK -->
                <div class="alert alert-info">
                    <a href="#" class="close" data-dismiss="alert">&times;</a>
                    <strong>@ViewBag.Info</strong>
                </div>
		            <!-- End Message OK -->
            }
            else if (ViewBag.Error != null)
            {
		            <!-- Message Error -->
                <div class="alert alert-danger">
                    <a href="#" class="close" data-dismiss="alert">&times;</a>
                    <p><strong>@ViewBag.Error</strong></p>
                </div>
		            <!-- End Message Error -->
            }
        }


        <div class="col-lg-3">

        </div>
        <div class="col-lg-6">

            <form action="/ConditionMatrix/SetCalender" method="post" class="form-inline" style="float:left;">

                <span style="display:inline-block;">

                    <input type="text" class="form-control input-sm" required name="year" placeholder="Ex:2022" /> &nbsp;
                    <input type="text" class="form-control input-sm" required name="duration" placeholder="Enter Duration" />
                </span>

                <span style="display:inline-block;">
                    <button type="submit" class="btn btn-sm btn-success" id="btnSearch">

                        <i class="fa fa-fw fa-send"></i>Setup
                    </button>
                </span>

            </form>


        </div>

        <div class="col-lg-3">

        </div>

    </div>
    
    <div class="row">
        <div class="col-lg-3">

        </div>

        <div class="col-lg-6">
          <br/>
            <h3>List of Year and Duration</h3>

            @using GridMvc.Html

            @Html.Grid(Model).Columns(
            col =>
            {
               

                col.Add().Titled("Year").Encoded(false).Sanitized(false).RenderValueAs(m =>
                    @<text>
                       
                         <a href="/ConditionMatrix/CalenderList?year=@m.year" title="Click Here">@m.year</a>
             
            
                    </text>
                 );
                
                
                
                
                col.Add(i => i.duration).Titled("Duration").Sortable(true).Filterable(true);
            }
            ).WithPaging(15, 20)



        </div>
        <div class="col-lg-3">

        </div>
    </div>


</div>


