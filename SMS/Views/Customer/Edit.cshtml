@model SMS.Models.Customer

@{
    ViewBag.Title = "Update Customer";
}

<div class="container-fluid">


    <div class="row">
        <div class="col-lg-8">
            <h3 style="color:royalblue;"><i class="fa fa-fw fa-users"></i> Update Customer</h3>
            <div class="panel panel-primary">

                <div class="panel-body">
                    <br />
                    @{

                        if (ViewBag.Info != null)
                        {
                    <!-- Message OK -->
                            <div class="alert alert-info">
                                <a href="#" class="close" data-dismiss="alert">&times;</a>
                                <strong>@ViewBag.Info</strong>
                            </div>
		            <!-- End Message OK -->
                        }
                        else if (ViewBag.Error != null)
                        {
		            <!-- Message Error -->
                            <div class="alert alert-danger">
                                <a href="#" class="close" data-dismiss="alert">&times;</a>
                                <p><strong>@ViewBag.Error</strong></p>
                            </div>
		            <!-- End Message Error -->
                        }
                    }
                    @using (Html.BeginForm("Edit", "Customer", FormMethod.Post, new { @class = "form-horizontal" }))
                    {
                        @Html.HiddenFor(m => m.BusinessUnit)
                        @Html.HiddenFor(m=>m.CustomerID)
                        <div class="col-lg-6">
                            <div class="form-group">
                                @Html.LabelFor(m => m.Name, new { @class = "control-label" })
                                @Html.TextBoxFor(t => t.Name, new { @class = "form-control" })
                                @Html.ValidationMessageFor(t => t.Name, null, new { @class = "text-danger" })

                            </div>
                            <div class="form-group">
                                @Html.LabelFor(m => m.OfficePhone, new { @class = "control-label" })
                                @Html.TextBoxFor(t => t.OfficePhone, new { @class = "form-control" })
                                @Html.ValidationMessageFor(t => t.OfficePhone, null, new { @class = "text-danger" })

                            </div>
                            <div class="form-group">
                                @Html.LabelFor(m => m.Address, new { @class = "control-label" })
                                @Html.TextAreaFor(t => t.Address, new { @class = "form-control" })
                                @Html.ValidationMessageFor(t => t.Address, null, new { @class = "text-danger" })

                            </div>

                        </div>
                        <div class="col-lg-6">
                            <div class="form-group">
                                @Html.LabelFor(m => m.ContactPerson, new { @class = "control-label" })
                                @Html.TextBoxFor(t => t.ContactPerson, new { @class = "form-control" })
                                @Html.ValidationMessageFor(t => t.ContactPerson, null, new { @class = "text-danger" })
                            </div>
                            <div class="form-group">
                                @Html.LabelFor(m => m.JobTitle, new { @class = "control-label" })
                                @Html.TextBoxFor(t => t.JobTitle, new { @class = "form-control" })
                                @Html.ValidationMessageFor(t => t.JobTitle, null, new { @class = "text-danger" })
                            </div>
                            <div class="form-group">
                                @Html.LabelFor(m => m.Mobile, new { @class = "control-label" })
                                @Html.TextBoxFor(t => t.Mobile, new { @class = "form-control" })
                                @Html.ValidationMessageFor(t => t.Mobile, null, new { @class = "text-danger" })
                            </div>
                            <div class="form-group">
                                @Html.LabelFor(m => m.Email, new { @class = "control-label" })

                                @Html.TextBoxFor(t => t.Email, new { @class = "form-control" })
                                @Html.ValidationMessageFor(t => t.Email, null, new { @class = "text-danger" })

                            </div>

                        </div>
                        <div class="col-lg-12">
                            <p style="text-align:center;">
                                <button type="submit" class="btn btn-primary" id="btnSubmit">
                                    <i class="fa fa-fw fa-save"></i> Update Customer
                                </button>
                                <a href="@Url.Content("~/Customer/Index")" class="btn btn-success">
                                    <i class="fa fa-fw fa-backward"></i> Back to List
                                </a>
                            </p>
                        </div>

                    }


                </div>
            </div>
        </div>
    </div>
</div>
@section scripts
{
    @Scripts.Render("~/bundles/jqueryval")
}


